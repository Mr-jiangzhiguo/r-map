{
  "include": ["src/**/*", "typings"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom", "dom.iterable", "scripthost"],
    "jsx": "react",
    "declaration": false,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "~src/*": ["./src/*"],
      "~config/*": ["./config/*"],
      "~api/*": ["./api/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  }
}
